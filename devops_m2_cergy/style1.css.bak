/* Import police */
@import 'https://fonts.googleapis.com/css2?family=Montserrat&display=swap';

/* CSS PC */
.container {
    display: flex;
    background-color: white;
    font-family: 'Montserrat', sans-serif;
}

/* Enlève le soulignement des liens */
a {
    text-decoration: none;
    padding-right: 1px;
    color: white;
}

a:hover {
    color: #c0fdff;
}

/* Partie gauche */
.leftBlock {
    float: left;
    background-color: #049A2C;
    padding: 2%;
    overflow-x: auto;
}

/* Photo */

.photoprofil {
    width:170px;
    height:170px;
    padding-bottom: 0%;
	padding-left: 8%;
}

/* Nom prénom profession */
.name {
    font-size: 25px;
    color: white;
    text-shadow: 2px 2px grey;
}

.name .subname {
    font-size: 15px;
    text-shadow: 2px 2px grey;
}

/* Profil */
.supertitle {
    font-size: 21px;
    color: white;
    padding-top: 10%;
    text-shadow: 1px 1px #87F8A5;
}

.aboutme {
    font-size: 13px;
    color: white;
}

/* Coordonnées/Hobbies */
.leftBlock .uppertitle {

    font-size: 21px;
    color: white;
    text-shadow: 1px 1px #87F8A5;
}

.location {
    font-size: 13px;
    color: #e6e6e6;
}

.hobbies {
    font-size: 13px;
    color: #87F8A5;
}

/* Barre sous les titres */
.leftBar {
    box-shadow: 2px 2px 0px 0px white;
}

/* Partie droite */
.rightBlock {
    float: right;
    background-color: #87F8A5;
    margin-right: -25%;
    padding-right: 2%;
    padding-left: 2%;
    padding-bottom: 1%;
    overflow-x: auto;
}

/* Compétences/Expérience/Formations */
.rightBlock .uppertitle {
    font-size: 21px;
    color: black;
    text-shadow: 1px 1px #87F8A5;
}

/* Titre */
.rightBlock .title {
    font-size: 19px;
}

/* Date */
.rightBlock .subtitle {
    font-size: 15px;
    color: white;
}

/* Texte */
.rightBlock .text {
    font-size: 13px;
    color: #585656;
}

/* Barre sous les titres */
.rightBlock .rightBar {
    box-shadow: 2px 2px 0px 0px #5272fd;
}

/* Responsive téléphone (testé uniquement sur Samsung Galaxy S8 et page responsive web)*/
@media screen and (max-width: 800px) {
    .rectangle {
        width:120px;
        height:120px;
    }

    .leftBlock {
        padding-right: 50px;
    }
  } 